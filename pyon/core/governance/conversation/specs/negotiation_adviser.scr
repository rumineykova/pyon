protocol Negotiation at adviser(role requester, role provider, role adviser)
{
    consult(offer:string) from requester;
    (result:string) to requester;
    rec Start{
            choice at requester {
                accept(text:string) from requester;
                () to requester;
            } or {
                reject(text:string) from requester;
                () to requester;

            } or {
                consult(cond:string) from requester;
                (result:string) to requester;
                Start;}
                }
}s