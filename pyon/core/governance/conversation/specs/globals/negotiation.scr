protocol Negotiation(role provider, role requester, role adviser)
{
    propose(string) from requester to provider;
    (string) from provider to requester;
    consult(string) from requester to adviser;
    (string) from adviser to requester;

    @{guard: repeat=0}
    rec Start{
        choice at requester {
            accept(string) from requester to provider;
            () from provider to requester;
            accept(string) from requester to adviser;
            () from adviser to requester;
        } or {
            reject(string) from requester to provider;
            () from provider to requester;
            reject(string) from requester to adviser;
            () from adviser to requester;
       } or {
            @{guard: repeat<4}
            propose(string) from requester to provider;
            (string) from provider to requester;
            consult(string) from requester to adviser ;
            (string) from adviser to requester;
            Start;}
    }
}
