protocol Negotiation at provider(role requester, role provider, role adviser)
{
    get_offer(text:string) from requester;
    (offer:string) to requester;
    rec Start{
        choice at requester {
            reject(text:string) from requester;
            () to requester;
        } or {
            accept(text:string) from requester;
            () to requester;
        } or {
            propose(text:string) from requester;
            (cond:string) to requester;
            Start;}
            }
}